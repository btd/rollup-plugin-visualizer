{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "es2022",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "types": [
      "node",
      "yargs"
    ]
  },
  "include": ["plugin/**/*", "shared/**/*", "bin/**/*"],
  "exclude": ["node_modules"]
}
